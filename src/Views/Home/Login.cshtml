@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/LayoutShare.cshtml";
}
<div class="container" style="margin-top: 20px;height: 450px;">
    @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            <label class="control-label col-md-4" for="pwd">Tên tài khoản</label>
            <div class="col-md-6">
                <input type="text" class="form-control" name="username" placeholder="Nhập tài khoản">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4" for="pwd">Mật khẩu</label>
            <div class="col-md-6">
                <input type="password" class="form-control" name="password" placeholder="Nhập mật khẩu">
            </div>
        </div>
        <div class="form-group">

            <div class="col-sm-offset-4 col-md-6">
                <a href="Register">Tài khoản mới</a>
            </div>
        </div>
        <div class="form-group">

            <div class="col-sm-offset-4 col-md-6">
                <a href="Forgot">Quên mật khẩu</a>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-md-6">
                <button type="submit" class="btn btn-default">Đăng nhập</button>
            </div>
        </div>
    }
    <p style="text-align:center; color: red; margin-top:10px">@ViewBag.Error</p>
</div>
