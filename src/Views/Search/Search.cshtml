@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/LayoutShare.cshtml";
}
@if (ViewBag.Song.Count > 0)
{
    <h2>Có @ViewBag.Song.Count kết quả tìm kiếm</h2>
    <ul>
        @foreach (var item in (IEnumerable<MusicViet.DataModel.Song>) ViewBag.Song)
        {
        <li>
            <div class="artist-bhhot">
                <div class="artist-img">
                    <img src="~/Content/Images/music.jpg" />
                </div>
                <div class="artist-name">
                    @Html.ActionLink(item.SongTitle, "Detail", "DetailSong", new { id = item.SongId }, null)
                </div>
                <div class="artist-luotnghe">
                    <span class="glyphicon glyphicon-headphones"></span>@item.Views
                </div>
                <div class="artist-infoplus">
                    <a href="Url.Content(item.PathMusic)" download>
                        <span class="glyphicon glyphicon-download-alt"></span>
                    </a>
                    <a href="#">
                        <span class="glyphicon glyphicon-plus"></span>
                    </a>
                </div>

            </div>
        </li>
        }
    </ul>
}
else
{
    <h2>Không tìm thấy kết quả nào</h2>
}


