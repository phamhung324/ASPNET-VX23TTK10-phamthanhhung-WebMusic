@model MusicViet.DataModel.Song


@using (Html.BeginForm("Create", "Song", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Song</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.SongTitle, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SongTitle)
                @Html.ValidationMessageFor(model => model.SongTitle)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MusicianId, "MusicianId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MusicianId", String.Empty)
                @Html.ValidationMessageFor(model => model.MusicianId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SingerId, "SingerId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("SingerId", String.Empty)
                @Html.ValidationMessageFor(model => model.SingerId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AlbumId, "AlbumId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("AlbumId", String.Empty)
                @Html.ValidationMessageFor(model => model.AlbumId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MusicGenresId, "MusicGenresId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MusicGenresId", String.Empty)
                @Html.ValidationMessageFor(model => model.MusicGenresId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PathMusic, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="Music" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "Index")
</div>