@model MusicViet.DataModel.Musician


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    @using (Html.BeginForm("Create", "Musician", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>Thêm mới nhạc sĩ</h4>
            <hr />
            @Html.ValidationSummary(true)
    
            <div class="form-group">
                @Html.LabelFor(model => model.MusicianName, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MusicianName)
                    @Html.ValidationMessageFor(model => model.MusicianName)
                </div>
            </div>
    
            <div class="form-group">
                @Html.Label("Chon anh nghe si", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="file" name="upload" id="Avatar" />
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.MusicianStory, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.MusicianStory, new { @class = "form-control", @rows = "10" })
                    @Html.ValidationMessageFor(model => model.MusicianStory)
                </div>
            </div>
            <p style="color:red;">@ViewBag.Error</p>
            
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Quay Lại", "Index")
    </div>
</body>
</html>
