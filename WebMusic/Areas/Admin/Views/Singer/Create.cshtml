@model MusicViet.DataModel.Singer



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    @using (Html.BeginForm("Create", "Singer", FormMethod.Post, new { enctype = "multipart/form-data" })) 
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>Singer</h4>
            <hr />
            @Html.ValidationSummary(true)
    
            <div class="form-group">
                @Html.Label("Tên ca sĩ", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SingerName)
                    @Html.ValidationMessageFor(model => model.SingerName)
                </div>
            </div>
    
            <div class="form-group">
                @Html.Label("Chọn ảnh ca sĩ", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="file" name="Image"  />
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.SingerStory, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.SingerStory, new { @class = "form-control", @rows = "10" })
                    @Html.ValidationMessageFor(model => model.SingerStory)
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Quay lại", "Index")
    </div>
</body>
</html>
